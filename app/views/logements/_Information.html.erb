<main>
  <h5 style="position:relative;top:30px;left: 80px;"> Information sur l'hébergement</h5>
  <div class="container" style="position:relative;top:70px;">
    <h6 style="position:relative;top:15px;">Où les clients peuvent-ils dormir ?</h6>

    <div class="card-body" style="padding-left:0px;" id="options">
      <%Chambre.all.each do |c|%><br>
      <span class="row" data-toggle="modal" data-target="#<%=c.title%>">
        <%if c.id == 3 ||c.id == 2 || c.id == 1 %>
        <span class="col-6">
          <%= c.title%>
          <small class="block_<%=c.id%>"></small>
        </span>
        <%end%>
        <!--  modal -->
        <!-- Button trigger modal -->
        
        
        <!-- <button type="button" class="button_ajout_lit" data-toggle="modal" data-target="#staticBackdrop" style="width:77px;"></button> -->
        
      </span>
      <!-- Modal -->
      <span class="modal fade" id="<%=c.title%>" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <span class="modal-dialog modal-dialog-centered">
          <span class="modal-content">
            
            <span class="modal-body">
              <% c.lits.each do |l| %>
             <div id="nombre">
                <input type="checkbox" class="checkbox options_list" data-value="<%=l.title%>" data-type="<%=c.id%>" data-id="<%=l.id%>" name="lit_ids[<%=l.id%>]" value="<%=l.title%>">
                <span style="position: relative;left: 20px;bottom: 3px;"> <%= l.title%> </span>

                <span class="decrement-js btn-primary" style="padding: 0px 11px;margin:0px 15px;border-radius: 50px;">-</span>
                <input type="text" name="lit_ids[<%=l.id%>]"  value="0" class="nombre_lit" style="width: 30px;text-align: center;">
                <span class="incremente-js btn-primary" style="padding: 0px 8px;margin:0px 15px;border-radius: 50px;">+</span>
            </div>
              <%end%>

            </span>
            <span class="modal-footer">
              <button type="button" class="btn" data-dismiss="modal">Close</button>
              <button type="button" class="btn savebutton" data-idchambre="<%=c.id%>" data-dismiss="modal">Save</button>
              
            </span>
            
          </span>
        </span>
      </span>
      <%end%>
    </div><br>
  </div>
</main>