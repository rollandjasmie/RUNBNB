<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nom %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :Prénom %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>
  
  <div class="field">
    <%= f.label :Sexe %><br />
    <%= f.text_field :sexe, autofocus: true, autocomplete: "sexe" %>
  </div>
  
  <div class="field">
    <%= f.label :Date_de_naissance %><br />
    <%= f.date_field :date_of_birth, autofocus: true, autocomplete: "date_of_birth" %>
  </div>

  <div class="field">
    <%= f.label :Adresse_email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :numéro_de_téléphone %><br />
    <%= f.telephone_field :mobile, autofocus: true, autocomplete: "mobile" %>
  </div>

  <div class="field">
    <%= f.label :Adresse %><br />
    <%= f.email_field :adresse, autofocus: true, autocomplete: "adresse" %>
  </div>

  <div class="field">
    <%= f.label :numéro_d_urgence %><br />
    <%= f.email_field :urgence, autofocus: true, autocomplete: "urgence" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :Mot_de_passe %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field"> 
    <%= f.label :Confirmer %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Mettre à jour" %>
  </div>
<% end %>

